@page "/about"
@rendermode InteractiveServer

@using FreedomBlaze.Client.Components
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<Resources.Localization> Localizer

<PageTitle>Freedom Blaze | About</PageTitle>

<MudContainer Class="mt-1">
    <MudGrid Spacing="4" Justify="Justify.Center">
        <MudItem xs="12" sm="6" md="6" Class="d-flex flex-column align-items-center text-center">
            <MudPaper Class="d-flex justify-center flex-grow-1 gap-4" Elevation="0">
                <MudImage Src="/img/freedom-blaze-logo-3-4-small.png" Height="183" Width="137" Alt="Freedom Blaze image" Elevation="0" />
            </MudPaper>
            <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">@Localizer["About.Title"]</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center">
                @Localizer["About.Body1"]
            </MudText>
        </MudItem>
    </MudGrid>

    <Contact />
</MudContainer>


